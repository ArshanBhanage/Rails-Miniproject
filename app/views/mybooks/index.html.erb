<section class="login-form-wrap2">

<p id="notice"><%= notice %></p>

<h1 style="color: black">My books</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Title:</th>
      
          
       
      <th>Description:</th>
      <th>Instagram:</th>
      <th>Phone:</th>
      

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mybooks.each do |mybook| %>
      <tr>
        
        <% if mybook.user == current_user %> 
        <td><%= mybook.title %></td>
        
        <td><%= mybook.description %></td>
        <td><%= mybook.email %></td>
        
        <td><%= mybook.phone %></td>


        <td><%= link_to 'Show details', mybook, class:"btn btn-primary"  %></td>
        <td><%= link_to 'Edit Book details', edit_mybook_path(mybook), class:"btn btn-success" %></td>
        <td><%= link_to 'Delete', mybook, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add new book', new_mybook_path, style:"color: magenta" %>
