<p id="notice"><%= notice %></p>

<h1>Mybooks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Image</th>
      <th>Description</th>
      <th>Email</th>
      <th>Phone</th>
      <th>User Id</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mybooks.each do |mybook| %>
      <tr>
        
        <% if mybook.user == current_user %> 
        <td><%= mybook.title %></td>
        <td><%= mybook.image %></td>
        <td><%= mybook.description %></td>
        <td><%= mybook.email %></td>
        <td><%= mybook.user_id %></td>
        <td><%= mybook.phone %></td>


        <td><%= link_to 'Show details', mybook, class:"btn btn-primary"  %></td>
        <td><%= link_to 'Edit Book details', edit_mybook_path(mybook), class:"btn btn-success" %></td>
        <td><%= link_to 'Delete', mybook, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Mybook', new_mybook_path %>
