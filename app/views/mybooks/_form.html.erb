  </div><br>

  <div class="field">

    <%= form.text_field :description, class:"form-control", placeholder:"Book Description" %>
  </div><br>

  <div class="field">
    
    <%= form.text_field :email, class:"form-control", placeholder:"Instagram" %>
  </div><br>

<div class="field">
    <%= form.number_field :user_id, id: :mybook_user_id, class:"form-control", value: current_user.id, type: :hidden %>
  </div>
  

  <div class="field">
    <%= form.text_field :phone,  class:"form-control", placeholder:"Phone" %>
  </div><br>

    <div class="field">
    <%= form.text_field :sem,  class:"form-control", placeholder:"Sem" %>
  </div><br>

      <div class="field">
    <%= form.text_field :price, class:"form-control", placeholder:"Price" %>

   
  </div><br>

